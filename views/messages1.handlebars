{{!-- for each message, create card with sending and receiving user, subject and body --}}
{{!-- for later, create a summary of the messages grouped by user, with new path --}}
{{!-- new path will show all of the messages in chronological order --}}
<h1> Messages</h1>
<div>
    <label for="username-input" default="please select">Send To</label>
    <select id="username-input">
        <option>Please select</option>
    </select>
</div>
<form class="send-msg-form">
    <div class="form-group">
        <label for="subject-label">Subject</label>
        <input type="text" id="subject-input" name="subject-input">
    </div>
    <div class="form-group">
        <label for="subject-label">Body</label>
        <textarea class="body-input" rows="4" id="body-input" name="body-input"></textarea><br>
        <button type="submit" id="send-button" name="send-button">Send</button>
    </div>
</form>


{{#each Message}}
<div class="card my-2">
    <div class="card-header my-2 py-2">
        Date: {{createdAt}}<br>
        Sending User: {{sendingUserId}}<br>
        Receiving User: {{receivingUserId}}<br>
    </div>
    <div class="card-body rounded border-primary">
        <p class="fw-bold my-0 ">Subject: {{subject}}</p>
        <p class="fw-normal">{{body}}</p>
    </div>
</div>
{{/each}}

